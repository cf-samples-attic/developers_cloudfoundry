%dl
  .app_header
    .app_image
      %img{:src => @sample_app_info.thumb_url}
    .app_description
      %h2=@title
      %span=@sample_app_info.description
      %hr
        %label Source code
        %a{:href=>@sample_app_info.git_repo, :target=>'_blank'}="#{@sample_app_info.git_repo}"
  .clear
  -if @fail
    .error
      %h2 Error
      %span.flash=@fail
      %a#start_url{:href=> @sample_app_info.starting_url}=@sample_app_info.starting_url
  -elsif (@warn)
    .error
      %h2 Warning
      %span.flash=@warn
      %a#start_url{:href=> @sample_app_info.starting_url}=@sample_app_info.starting_url

  %form{:action=> "/apps/#{@app_name}/deploy", :method => :post}

    %a{:href=>'#', :onclick =>"$('#advanced').show();$(this).hide(); $(this).next().show()"} View Deployment Details
    %a{:href=>'#', :style => 'display:none', :onclick =>"$('#advanced').hide();$(this).hide(); $(this).prev().show()"} Hide Deployment Details
    %br
    %br
    #advanced.hidden
      -@env_vars.each do |env_var, env_value|
        .fieldset
          %span{:for=>env_var}="#{env_var}:&nbsp;"
          %input{:type=>'text', :value =>env_value, :name => env_var }
      %hr
      .fieldset
        %span External Developer Email:&nbsp;
        %input.short{:name=>'external_email', :type => 'text', :value => params[:external_email], :readonly => true}
      .fieldset
        %span External App Name:&nbsp;
        %input.short{:name=>'external_app_name', :type => 'text', :value => params[:external_app_name], :readonly => true}
      %hr
      .fieldset
        %label{:for => 'new_name'} Reserved Cloud Foundry App Name
        %input.short{:name => 'new_name', :type => 'text', :value => (@app_clone_request ? @app_clone_request.cf_app_name : "")}
        %span .cloudfoundry.com

    %dd
      -if (session[:email])
        -unless @warn
          .buttons
            %button{:type => 'submit', :enabled => false} Deploy
      -else
        %span **You must be logged in to deploy.
